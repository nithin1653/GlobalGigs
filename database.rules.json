
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "freelancers": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "conversations": {
      ".indexOn": ["clientUserId", "freelancerUserId"],
      "$convId": {
        ".read": "data.child('clientUserId').val() === auth.uid || data.child('freelancerUserId').val() === auth.uid",
        ".write": "data.child('clientUserId').val() === auth.uid || data.child('freelancerUserId').val() === auth.uid"
      }
    }
  }
}
